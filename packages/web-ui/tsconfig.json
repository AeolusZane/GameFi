{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@hook/*": [
        "./src/hook/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@log": [
        "./src/log/index.ts"
      ],
      "@provider/*": [
        "./src/provider/*"
      ],
      "@contract/*": [
        "./src/contract/*"
      ],
      "@abi/*": [
        "../contract/artifacts/contracts/*"
      ],
    }
  },
  "include": [
    "src",
    "tamagui.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json",
    }
  ]
}